<footer class="usa-footer usa-footer-medium footer" role="contentinfo">

	<div class="footer__container">
		<div class="footer__container--top">
			<div class="footer__container__item">
				<div class="footer__logo">
					<a href="{{site.url}}" accesskey="1" title="Home" aria-label="{{site.title}}">
						<img src="{{options.header_logo_image.url}}"  alt="{{options.header_logo_image.alt}}" title=""/>
					</a>
			 	</div>
			</div>

			<div class="footer__container__item footer__container__item--half">
				{{options.footer_quote}}

			</div>
			<div class="footer__container__item">
				<a href="#main-header">
					<svg class="icon icon--scroll-up" role="presentation">
            <use xlink:href="#icon-up-chevron-button"></use>
          </svg>

				</a>
			</div>


		</div>

		<div class="footer__container--bottom">
			<div class="footer__container__item">
				<h4>ABOUT</h4>
<p>
	{{ options.about_us_footer}}

</p>
			</div>
			<div class="footer__container__item">
				<h4>{{options.menu_header}}</h4>

				<ul>
					{% for item in footer_menu.get_items %}
					<li>
						<a href="{{item.get_link}}">{{item.title}} &#8250;</a>
					</li>
					{% endfor %}
				</ul>
			</div>
			<div class="footer__container__item">
				<h4>CONTACT</h4>

				<p>
				<a class="contact-details" href="tel:07846931183">
					<svg class="icon icon--footer-tel" role="presentation">
            <use xlink:href="#icon-smartphone"></use>
          </svg> <span>07846931183</span>
				</a>
			<br/>

				<a class="contact-details" href="mailto:contact@tgcrafters.co.uk">
					<svg class="icon icon--footer-email" role="presentation">
						<use xlink:href="#icon-mail"></use>
					</svg> <span>contact@tgcrafters.co.uk</span>
				</a>
				<br/>

				<a class="contact-details" href="https://www.facebook.com/timberandglasscrafters/">
					<svg class="icon icon--footer-fb" role="presentation">
	          <use xlink:href="#icon-facebook-2"></use>
	        </svg><span>Join us</span>
				</a>
				<br/>
			</p>
			</div>
			<div class="footer__container__item form--dark">
				<h4>{{options.quick_quote_form_header}}</h4>
				<p>
					{{options.quick_quote_form|print_r}}

				</p>
			</div>
		</div>
	</div>
	<div class="footer__copyright">
		<div class="footer__copyright__container"><a href="{{site.url}}/">{{site.title}}</a> | Copyright &copy; {{ "now"|date("Y") }}</a>
	</div>



</footer>
